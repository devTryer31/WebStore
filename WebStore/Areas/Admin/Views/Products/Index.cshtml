@model IEnumerable<WebStore.ViewModels.ProductViewModel>

@{
    ViewData["Title"] = "View";
}

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImgUrl)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <a asp-controller="Products" asp-action="Edit">+ new</a>
                </td>
            </tr>

            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <img src="~/images/shop/@item.ImgUrl" width="50" alt="@item.Name" />
                    </td>
                    <td>
                        <a asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i> </a>|
                        <a asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id" text-danger><i class="glyphicon glyphicon-remove"></i> </a>
                        @*@Html.ActionLink("Edit", "Edit", new {/* id=item.PrimaryKey */}) |
                            @Html.ActionLink("Details", "Details", new {/* id=item.PrimaryKey */}) |
                            @Html.ActionLink("Delete", "Delete", new {/* id=item.PrimaryKey */})*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

