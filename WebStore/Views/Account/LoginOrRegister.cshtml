@model WebStore.ViewModels.Identity.LoginOrRegisterViewModel
@{
    ViewData["Title"] = "Вход/регистрация | E-Shopper";
}

<div class="container">
    <section id="form">
        <!--form-->
        <div class="container">
            <div class="row">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="col-sm-4 col-sm-offset-1">
                    <div class="login-form">
                        <!--login form-->
                        <h2>Вход в аккаунт</h2>
                        <form asp-action="Login" asp-antiforgery="true" asp-route-returnurl="@Model.LoginViewModel.ReturnUrl">


                            <input asp-for="LoginViewModel.Name" placeholder="Логин" />
                            <span asp-validation-for="LoginViewModel.Name"></span>

                            <input asp-for="LoginViewModel.Password" placeholder="Пароль" />
                            <span asp-validation-for="LoginViewModel.Password"></span>

                            <span>
                                <input asp-for="LoginViewModel.IsRememberMe" class="checkbox">
                                Запомнить меня
                            </span>
                            <button type="submit" class="btn btn-default">Вход</button>
                        </form>
                    </div><!--/login form-->
                </div>
                <div class="col-sm-1">
                    <h2 class="or">ИЛИ</h2>
                </div>
                <div class="col-sm-4">
                    <div class="signup-form">
                        <!--sign up form-->
                        <h2>Регистрация нового пользователя</h2>
                        <form asp-action="Register" asp-antiforgery="true">


                            <input asp-for="RegisterViewModel.Name" placeholder="Логин" />
                            <span asp-validation-for="RegisterViewModel.Name"></span>

                            <input asp-for="RegisterViewModel.Password" placeholder="Пароль" />
                            <span asp-validation-for="RegisterViewModel.Password"></span>

                            <input asp-for="RegisterViewModel.SamePassword" placeholder="Подтверждение пароля" />
                            <span asp-validation-for="RegisterViewModel.SamePassword"></span>

                            <button type="submit" class="btn btn-default">Зарегистрироваться</button>
                        </form>
                    </div><!--/sign up form-->
                </div>
            </div>
        </div>
    </section><!--/form-->
</div>
